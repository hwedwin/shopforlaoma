<% error = @share_node.errors.include?(:is_root) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :is_root, :class => 'control-label' %>
  <div class='controls'>
    <%= f.check_box :is_root, :class => 'form-control input-xlarge input-with-feedback', :autofocus => true %>
    <span class='help-inline'><%= error ? f.error_message_on(:is_root) : "Ex: a simple text" %></span>
  </div>
</fieldset>


<div class="form-actions">
  <%= f.submit pat(:save), :class => 'btn btn-primary' %>
  &nbsp;
  <%= f.submit pat(:save_and_continue), :class => 'btn btn-info', :name => 'save_and_continue' %>
  &nbsp;
  <%= link_to pat(:cancel), url(:share_nodes, :index), :class => 'btn btn-default' %>
</div>